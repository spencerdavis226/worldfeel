{
  "info": {
    "name": "WorldFeel API",
    "description": "Real-time global emotional state API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "https://api.worldfeel.org",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/health",
          "host": ["{{baseUrl}}"],
          "path": ["api", "health"]
        },
        "description": "Check if the API server is running"
      },
      "response": []
    },
    {
      "name": "Public Emotion of the Day",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/public/emotion-of-the-day",
          "host": ["{{baseUrl}}"],
          "path": ["api", "public", "emotion-of-the-day"]
        },
        "description": "Get the current emotion and color of the day with usage statistics"
      },
      "response": []
    },
    {
      "name": "Get Stats",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/stats",
          "host": ["{{baseUrl}}"],
          "path": ["api", "stats"]
        },
        "description": "Get current statistics about submitted emotions"
      },
      "response": []
    },
    {
      "name": "Get Stats with Query",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/stats?yourWord=joy&deviceId=test-device",
          "host": ["{{baseUrl}}"],
          "path": ["api", "stats"],
          "query": [
            {
              "key": "yourWord",
              "value": "joy",
              "description": "Filter stats for a specific word"
            },
            {
              "key": "deviceId",
              "value": "test-device",
              "description": "Filter stats for a specific device"
            }
          ]
        },
        "description": "Get statistics filtered by word or device ID"
      },
      "response": []
    },
    {
      "name": "Get Color for Word",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/color?word=joy",
          "host": ["{{baseUrl}}"],
          "path": ["api", "color"],
          "query": [
            {
              "key": "word",
              "value": "joy",
              "description": "The emotion word to get color for"
            }
          ]
        },
        "description": "Get the color hex code for a specific emotion word"
      },
      "response": []
    }
  ]
}
